<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalDDM2.Views.Components.ClimaCard">

    <Border Stroke="#E0E0E0"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 10"
            BackgroundColor="White"
            Padding="10"
            Margin="0,5">

        <Grid RowDefinitions="Auto, Auto, Auto, Auto" 
              ColumnDefinitions="*, Auto">

            <Label x:Name="LblCidade" 
                   Grid.Row="0" Grid.Column="0"
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="Black" />

            <Label x:Name="LblData" 
                   Grid.Row="0" Grid.Column="1"
                   FontSize="12" 
                   TextColor="Gray" 
                   VerticalOptions="Center" />

            <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="10" Margin="0,5">
                
                <Label x:Name="LblTemperatura" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="{StaticResource Primary}" />
                
                <Label x:Name="LblCondicao" 
                       VerticalOptions="Center" 
                       FontSize="16" 
                       TextColor="#555" />
            </StackLayout>

            <Label x:Name="LblSensacao" 
                   Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                   FontSize="14" 
                   TextColor="#666" />

            <Label x:Name="LblLatLon" 
                   Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                   FontSize="10" 
                   TextColor="#999" 
                   Margin="0,5,0,0" />

        </Grid>
    </Border>
</ContentView>