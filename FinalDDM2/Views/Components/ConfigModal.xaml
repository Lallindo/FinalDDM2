<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:system="clr-namespace:System;assembly=mscorlib"
               x:Class="FinalDDM2.Views.Components.ConfigModal"
               x:TypeArguments="system:Int32"
               CanBeDismissedByTappingOutsideOfPopup="True"
               BackgroundColor="DimGrey">

    <Border StrokeShape="RoundRectangle 20"
            BackgroundColor="DarkSlateGrey"
            WidthRequest="400"
            HeightRequest="250"
            Padding="20">
        
        <Grid RowDefinitions="auto, auto, auto, auto, auto">
            <Label Grid.Row="0" Text="Unidade de temperatura usada:"/>
            <RadioButton Grid.Row="1" x:Name="CelsiusRb" Value="0" TextColor="White" CheckedChanged="OnColorsRadioButtonCheckedChanged" Content="Celsius" GroupName="tempGroup"></RadioButton>
            <RadioButton Grid.Row="2" x:Name="FahrenRb" Value="1" TextColor="White" CheckedChanged="OnColorsRadioButtonCheckedChanged" Content="Fahrenheit" GroupName="tempGroup"></RadioButton>
            <RadioButton Grid.Row="3" x:Name="KelvinRb" Value="2" TextColor="White" CheckedChanged="OnColorsRadioButtonCheckedChanged" Content="Kelvin" GroupName="tempGroup"></RadioButton>
            
            <Button Grid.Row="4" Clicked="Button_Clicked" Text="Fechar"/>
        </Grid>
        
        
    </Border>

</toolkit:Popup>