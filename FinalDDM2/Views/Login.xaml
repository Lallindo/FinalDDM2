<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:FinalDDM2.ViewModels"
             x:Class="FinalDDM2.Views.Login"
             x:DataType="viewModels:LoginViewModel"
             Title="Login">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20" VerticalOptions="Center">

            <Label 
                Text="Bem-vindo!"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label 
                Text="Faça login para continuar"
                FontSize="16"
                HorizontalOptions="Center"
                Margin="0,0,0,20" />

            <!-- Email Input -->
            <Frame Padding="10" CornerRadius="10" BorderColor="LightGray">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Email" />
                    <Entry Text="{Binding Usuario.Email, Mode=TwoWay}" Placeholder="Digite seu email" Keyboard="Email" />
                </VerticalStackLayout>
            </Frame>

            <!-- Senha Input -->
            <Frame Padding="10" CornerRadius="10" BorderColor="LightGray">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Senha" />
                    <Entry Text="{Binding Usuario.Senha, Mode=TwoWay}" IsPassword="True" Placeholder="Digite sua senha" />
                </VerticalStackLayout>
            </Frame>

            <Button 
                Text="Fazer Login" 
                Command="{Binding TentarLoginCommand}"
                HorizontalOptions="FillAndExpand"
                Margin="0,20,0,0" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,15,0,0">
                <Label Text="Não tem uma conta?" VerticalOptions="Center" />
                <Button 
                    Text="Cadastre-se" 
                    Command="{Binding IrParaRegistroCommand}"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    BorderWidth="0" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>