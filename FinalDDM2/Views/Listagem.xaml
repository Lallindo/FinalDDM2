<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalDDM2.Views.Listagem">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="{Binding UsuarioLogado.Nome}"></Label>
            <Label Text="Cidade que será buscada:"></Label>
            <Entry Text="{Binding CidadeBusca}" Placeholder="Nome da cidade que será buscada" />
            <Button Command="{Binding CallApiCommand}" Text="Chamar API"></Button>
            
            <CollectionView ItemsSource="{Binding UsuarioLogado.Buscas}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*, *, *, *" RowDefinitions="*, *, *">
                            <Label Grid.Column="0" Grid.Row="0" Text="{Binding Cidade}"></Label>
                            <Label Grid.Column="0" Grid.Row="1" Text="{Binding TempCelsius}"></Label>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>