<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:FinalDDM2.Views"
             xmlns:components="clr-namespace:FinalDDM2.Views.Components"
             x:Class="FinalDDM2.Views.Listagem">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Configurações" 
                     Order="Primary"
                     Priority="0"
                     Command="{Binding AbrirConfiguracoesCommand}" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        
        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, *" Padding="10">
            
            <Label Grid.Row="0" Text="{Binding UsuarioLogado.Nome}" FontAttributes="Bold" FontSize="18" Margin="0,0,0,10"/>
            
            <Label Grid.Row="1" Text="Cidade que será buscada:"></Label>
            
            <Entry Grid.Row="2" Text="{Binding CidadeBusca}" Placeholder="Nome da cidade que será buscada" />
            
            <Button Grid.Row="3" Command="{Binding CallApiCommand}" Text="Chamar API" Margin="0,10,0,10"></Button>
            
            <Label Grid.Row="4" Text="Histórico de buscas" FontAttributes="Bold" Margin="0,0,0,5"/> 

            <CollectionView Grid.Row="5" ItemsSource="{Binding UsuarioLogado.Buscas}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <components:ClimaCard 
                            ClimaData="{Binding .}"
                            UnidadeId="{Binding BindingContext.IdOpcaoAtual, Source={RelativeSource AncestorType={x:Type views:Listagem}}}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>